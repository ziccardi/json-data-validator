{
  "name": "json-data-validator",
  "version": "3.0.5",
  "description": "Simple framework for dynamic json input validation",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "test": "jest --transformIgnorePatterns \"node_modules/(?!lodash-es)/\"",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "keywords": [
    "validator",
    "validation",
    "validate",
    "json",
    "configurable"
  ],
  "author": "Massimiliano Ziccardi <massimiliano.ziccardi@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "29.5.3",
    "@types/node": "18.19.101",
    "@types/is-valid-path": "0.1.2",
    "@types/lodash": "4.14.197",
    "@types/validator": "13.15.0",
    "gts": "5.3.1",
    "jest": "29.6.2",
    "ts-jest": "29.3.4",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "add": "2.0.6",
    "is-valid-path": "0.1.1",
    "lodash": "4.17.21",
    "moment": "2.30.1",
    "validator": "13.15.0",
    "yarn": "1.22.22"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "roots": [
      "test",
      "src"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ziccardi/json-data-validator.git"
  }
}
